CC=g++
#CFLAGS=-c -Wall
CFLAGS=-c -w

all: test.out

test.out: main.o plyfile.o View.o PlyUtility.o PlyModel.o BoundingBox.o Quaternion.o Vector.o Arcball.o Controller.o Model.o
	$(CC) main.o plyfile.o View.o PlyUtility.o PlyModel.o BoundingBox.o Quaternion.o Vector.o Arcball.o Controller.o Model.o -o test.out -lGL -lGLU -lglut

main.o: main.cpp
	$(CC) $(CFLAGS) main.cpp

plyfile.o: plyfile.c
	gcc $(CFLAGS) plyfile.c

View.o: View.cpp
	$(CC) $(CFLAGS) View.cpp

PlyUtility.o: PlyUtility.cpp
	$(CC) $(CFLAGS) PlyUtility.cpp

PlyModel.o: PlyModel.cpp
	$(CC) $(CFLAGS) PlyModel.cpp

BoundingBox.o: BoundingBox.cpp
	$(CC) $(CFLAGS) BoundingBox.cpp

Quaternion.o: Quaternion.cpp
	$(CC) $(CFLAGS) Quaternion.cpp

Vector.o: Vector.cpp
	$(CC) $(CFLAGS) Vector.cpp

Arcball.o: Arcball.cpp
	$(CC) $(CFLAGS) Arcball.cpp

Controller.o: Controller.cpp
	$(CC) $(CFLAGS) Controller.cpp
clean:
	rm -rf *.o assgn
