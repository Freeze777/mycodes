import java.util.Scanner;

public class Sol {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		long tst = sc.nextlong();
		while (tst > 0) {
			long l = sc.nextlong();
			long r = sc.nextlong();
			long mask =3;
			long sum = 0;
			switch (l & mask) {
			case 1:
				sum = findSum(1, l, r);

				break;
			case 2:
				sum = findSum(l + 1, l, r);

				break;
			case 3:
				sum = findSum(0, l, r);

				break;
			case 4:
				sum = findSum(l, l, r);

				break;

			}
			System.out.prlongln("\n"+sum);
			tst--;
		}

	}

	private static long findSum(long i, long l, long r) {
		long sum = 0;
		while (l<=r) {
			sum ^= i;
			i =i^(++l);
			
		}
		return sum;
	}

}