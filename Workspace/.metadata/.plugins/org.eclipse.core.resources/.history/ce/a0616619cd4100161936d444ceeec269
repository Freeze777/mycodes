package algo.bits;

public class AddTwoNumbersWithoutArithematicOperators {
	public int getSum(int a, int b) {
		int mask = 1;
		while (mask != 0) {
			if ((b & mask) != 0) {
				int t = mask;
				while ((a & t) != 0) {
					a = a ^ t;
					t = t << 1;
				}
				a = a ^ t;
			}
			mask = mask << 1;
		}
		return a;
	}

}
