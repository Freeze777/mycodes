import java.util.*;

public class LazerGun {

static class Line {
	double m;


	public Line(int x0, int y0, int x1, int y1) {
		if (x1 == x0) {
			this.m = Double.MAX_VALUE;
			c = 0;
		} else {
			this.m = (double) (y1 - y0) / (x1 - x0);
			this.c = (double) y0 - (this.m * x0);
		}

	}

}

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Set<Line> set = new HashSet<Line>();
		int n = sc.nextInt();
		int x0 = sc.nextInt();
		int y0 = sc.nextInt();
		for (int i = 0; i < n; i++) {
			int x1 = sc.nextInt();
			int y1 = sc.nextInt();
			set.add(new Line(x0, y0, x1, y1));
		}
		System.out.println(set.size());

	}

}
