import java.util.Scanner;

public class Sol {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		int tst = sc.nextInt();
		while (tst > 0) {
			int l = sc.nextInt();
			int r = sc.nextInt();
			int mask = 0b11;
			int sum = 0;
			switch (l & mask) {
			case 1:
				sum = findSum(1, l, r);

				break;
			case 2:
				sum = findSum(l + 1, l, r);

				break;
			case 3:
				sum = findSum(0, l, r);

				break;
			case 4:
				sum = findSum(l, l, r);

				break;

			}
			System.out.println(sum);
			tst--;
		}

	}

	private static int findSum(int i, int l, int r) {
		int sum = 0;
		while (l<=r) {
			sum += i;
			i ^= (++l);
			
		}
		return sum;
	}

}