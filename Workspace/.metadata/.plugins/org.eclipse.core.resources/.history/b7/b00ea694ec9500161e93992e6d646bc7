import java.util.*;

public class TestClass {
	static Map<Integer, ArrayList<Integer>> adjList;

	public static void main(String args[]) throws Exception {
		Scanner s = new Scanner(System.in);
		int n = s.nextInt();
		int node_val[] = new int[n + 1];
		adjList = new HashMap<Integer, ArrayList<Integer>>();
		for (int i = 1; i <= n; i++) {
			node_val[i] = s.nextInt();
			adjList.put(i, new ArrayList<Integer>());
		}
		for (int i = 0; i < n - 1; i++) {
			int st = s.nextInt();
			int d = s.nextInt();
			adjList.get(st).add(d);
			adjList.get(d).add(st);
		}
		int opt_root = -1;
		long min = Integer.MAX_VALUE;
		for (int root = 1; root <= n; root++) {
			boolean visited[] = new boolean[n + 1];
			long f[] = new long[n + 1];
			long g[] = new long[n + 1];
			long ans = dfs(root, visited, f, g, node_val);
			if (ans < min) {
				opt_root = root;
				min = ans;
			}

		}

		System.out.println(opt_root + " " + min);

	}

	public static long dfs(int vertex, boolean[] visited, long[] f, long[] g,
			int[] node_val) {
		visited[vertex] = true;
		g[vertex] += node_val[vertex];
		f[vertex] += g[vertex];
		List<Integer> adjNodes = adjList.get(vertex);
		long sum =f[vertex];
		for (Integer node : adjNodes) {
			if (!visited[node]) {
				sum += dfs(node, visited, f, g, node_val);
				g[vertex] += g[node];
				f[vertex] += f[node] + g[node];
			}
		}
		return f[vertex];
	}

}
