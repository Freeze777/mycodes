package algo.sort;

import java.util.Arrays;
import java.util.Comparator;

public class ArrangeNumbersToFormBigNumber {
	public static void main(String[] args) {
		//Integer[] arr={1,34,3,98,9,76,45,4};//998764543431
		//Integer[] arr={54,546,548,60};//6054854654
		String ans=getMaxNum(arr);
		System.out.println(ans);
	}

	public static String getMaxNum(Integer[] arr) {
		Comparator<Integer> myComp=new Comparator<Integer>() {
			
			@Override
			public int compare(Integer o1, Integer o2) {
				// TODO Auto-generated method stub
				return o2.toString().concat(o1.toString()).compareTo(o1.toString().concat(o2.toString()));
			}
		};
		Arrays.sort(arr, myComp);
		StringBuilder sb=new StringBuilder();
		for(Integer i : arr)
			sb.append(i);
		return sb.toString();
	}

}
