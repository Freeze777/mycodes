package hacker.rank.project.euler;

import java.io.*;
import java.util.*;

public class Solution {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int size = 5000001;
		int[] init = { 0, 1, 7, 2, 5, 8, 16, 3, 19, 6, 14, 9, 9, 17, 17, 4, 12,
				20, 20, 7, 7, 15, 15, 10, 23, 10, 111, 18, 18, 18, 106, 5, 26,
				13, 13, 21, 21, 21, 34, 8, 109, 8, 29, 16, 16, 16, 104, 11, 24,
				24 };
		
		int[] dp = new int[size];
		
		for (int i = 0; i < init.length; i++) 
			dp[i+1]=init[i];			
		
		computeCollatzSequence(size-1,dp);
		int tst = sc.nextInt();
		while (tst > 0) {

			tst--;
		}

	}

	private static int computeCollatzSequence(int n, int[] dp) {
		if(n==1)
			return 0;
		if(dp[n]!=0)
			return dp[n];
		else if(n%2==0)
			dp[n]=computeCollatzSequence(n/2, dp)+1;
		else
			dp[n]=computeCollatzSequence(n/2, dp)+1;	
		
		
		return dp[n];
		
		
	}
}
