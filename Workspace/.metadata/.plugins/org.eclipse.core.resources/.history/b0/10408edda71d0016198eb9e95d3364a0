package algo;

/**
 * https://en.wikipedia.org/wiki/Summed_area_table
 **/
public class EfficientSubmatrixComputation {
	public static void main(String[] args) {
		int row = 3;
		int col = 4;
		int[][] mat = new int[row][col];

		for (int i = 0; i < mat.length; i++)
			for (int j = 0; j < mat[0].length; j++)
				mat[i][j] = (int) (Math.random() * 101);

		GlobalUtils.printArray(mat);
		int[][] sat = new int[row][col];
		preProcessToSAT(mat,sat);
		
		GlobalUtils.printArray(sat);

	}

	private static void preProcessToSAT(int[][] mat, int[][] sat) {
		for (int i = 0; i < sat.length; i++) {
			for (int j = 0; j < sat[0].length; j++) {
				sat[i][j] = mat[i][j];

				if (i >= 1)
					sat[i][j] += sat[i - 1][j];
				if (j >= 1)
					sat[i][j] += sat[i][j - 1];
				if (i >= 1 && j >= 1)
					sat[i][j] -= sat[i - 1][j - 1];
			}
		
	}

}
