/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) { val = x; }
 * }
 */
public class Solution {
    public ListNode mergeTwoLists(ListNode l1, ListNode l2) {
        if(l1==null && l2==null)
            return null;
        ListNode head=null,t=null;
        if(l1!=null && l2!=null){
            if(l2.val>l1.val){
                head=l1;
                t=head;
                l1=l1.next;
            }else{
                head=l2;
                t=head;
                l2=l2.next;
            }
        }else if(l1!=null){
                head=l1;
                t=head;
                l1=l1.next;
        }else{
                head=l2;
                t=head;
                l2=l2.next;
        }
        while(l1!=null||l2!=null){
            if(l2==null && l1!=null){
                t.next=l1;
                l1=l1.next;
            }else if(l1==null && l2!=null){
                t.next=l2;
                l2=l2.next;
            }else {
                if(l2.val>l1.val){
                    t.next=l1;
                    l1=l1.next;
                }else{
                    t.next=l2;
                    l2=l2.next;
                }
            }
            
            
        }
        return head;
    }
}