package algo.trees;

public class FlattenTreeToPreOrderLinkedList {
    public void flatten(TreeNode root) {
        if(root==null)
            return;
        Stack<TreeNode> s=new Stack<TreeNode>();
        s.add(root);
        while(!s.isEmpty()){
            root=s.pop();
            if(root.right!=null)
                s.add(root.right);
            if(root.left!=null)
                s.add(root.left);
            if(!s.isEmpty())
                root.right=s.peek();
            else
                root.right=null;
            root.left=null;
        }
    }
}
