import java.util.Arrays;
import java.util.Scanner;

public class Triplets {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int d = sc.nextInt();
		int count = 0;
		int[] arr = new int[n];
		for (int i = 0; i < n; i++) {
			arr[i] = sc.nextInt();
		}
		int i = 0, j = 1, k = 2;
		while ((i < arr.length) && (j < arr.length) && (k < arr.length)) {
			int a = arr[i];
			int b = arr[j];
			int c = arr[k];

			if (b < a + d) {
				j++;
				if(j>=k)
					k=j+1;
				continue;

			} else if (b> a + d) {
				i++;
				j++;
				continue;

			}else if(c < b + d){
				if(j>=k)
					k=j+1;
				else
					k++;
				continue;
				
			}else if(c > b + d){
				i++;
				j++;
				k++;
				continue;
				
				
			}else{
				
				count++;
				i++;
				j++;
				k++;
				
			}

		}
		System.out.println(count);

	}

}
