import java.util.Scanner;

public class FIB2 {

	private static long a, b;

	private static String quotientString = "";

	private static long getNthFibNum(long n, long m) {
		long[][] result = { { 1, 0 }, { 0, 1 } };
		long[][] tempFibMatrix = { { 1, 1 }, { 1, 0 } };
		while (n != 0) {

			if (n%2==1)
				moduloMatrixMul2x2(result, tempFibMatrix, m);

			long[][] temp = { { tempFibMatrix[0][0], tempFibMatrix[0][1] },
					{ tempFibMatrix[1][0], tempFibMatrix[1][1] } };
			moduloMatrixMul2x2(tempFibMatrix, temp, m);
			
			n/=2;

		}
		return ((b * result[1][0]) + (a * result[1][1])) % m;
	}

	private static int getFibPeriod(long m) {
		int k = 1;
		long[][] temp = { { 1, 0 }, { 0, 1 } };
		long[][] fibMatrix = { { 1, -1 }, { 1, 0 } };
		while (true) {
			moduloMatrixMul2x2(temp, fibMatrix, m);
			if (temp[0][0] == 1 && temp[0][1] == 0 && temp[1][0] == 0
					&& temp[1][1] == 1)
				break;
			k++;
		}
		return k;
	}

	private static void moduloMatrixMul2x2(long[][] temp, long[][] fibMatrix2,
			long m) {
		long a00 = temp[0][0], a01 = temp[0][1], a10 = temp[1][0], a11 = temp[1][1];
		temp[0][0] = (a00 * fibMatrix2[0][0] + a01 * fibMatrix2[1][0]) % m;
		temp[0][1] = (a00 * fibMatrix2[0][1] + a01 * fibMatrix2[1][1]) % m;
		temp[1][0] = (a10 * fibMatrix2[0][0] + a11 * fibMatrix2[1][0]) % m;
		temp[1][1] = (a10 * fibMatrix2[0][1] + a11 * fibMatrix2[1][1]) % m;
	}

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		a = sc.nextLong();
		b = sc.nextLong();
		long n=sc.nextLong();
		long m = 1000000007;
		long period = getFibPeriod(m);

		System.out.println("Method 2:PERIODICITY");
		long nmod = n%period;
		System.out.println(getNthFibNum(nmod, m));

	}

}
