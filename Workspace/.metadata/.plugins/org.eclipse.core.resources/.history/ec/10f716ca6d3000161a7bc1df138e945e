package algo;

public class GenerateBalancedBracketsN {
	public static void main(String[] args){

		int n=6;
		char[] br=new char[n];
		if(n%2==0)
			generate(br,0,n,0,0,n-1);
		else
			System.out.println("no answer");
	}
	public static void generate(char[] br,int level,int n,int count,int low,int high){
		if(low>high)
			return;
		if(count==n)
			{
				System.out.println(String.valueOf(br));
				return;

			}

		br[low]='{';br[low+1]='}';
		generate(br,level+1,n,count+2,low+2,high);
		br[low]='{';br[high]='}';
		generate(br,level+1,n,count+2,low+1,high-1);


	}
}
