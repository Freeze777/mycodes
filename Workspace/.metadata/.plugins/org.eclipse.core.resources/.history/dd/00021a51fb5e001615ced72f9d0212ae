import java.util.Scanner;

class Solution {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int t = sc.nextInt();
		while (t-- > 0) {
			int n = sc.nextInt();
			long k = sc.nextLong();
			long[] cost = new long[n];
			for (int i = 0; i < cost.length; i++) {
				cost[i] = sc.nextLong();
			}
			long max=0;
			for (int i = 0; i < cost.length; i++) {
				for (int j = 0; j < cost.length; j++) {
					if(cost[j]>cost[i]){
						max=Math.max(max,cost[j]-cost[i]-(2*k));
					}
				}
			}
		}
	}
}
