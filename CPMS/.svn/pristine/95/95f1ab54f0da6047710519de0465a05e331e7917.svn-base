package com.ctl.cpms.domain;

import javax.persistence.*;
import java.util.List;

@Entity
@Table(name = "cpm_routes")
public class Route {

    @Id
    @GeneratedValue(strategy = GenerationType.SEQUENCE,generator = "cpmRouteSeq")
    @SequenceGenerator(name = "cpmRouteSeq", sequenceName = "CPM_ROUTES_SEQ", allocationSize = 1)
    private Long id;

    @ManyToOne(optional = false)
    @JoinColumn(name = "user")
    private User user;

    @OneToOne
    @JoinColumn(name = "source_id")
    private TransitPoint source;

    @OneToOne
    @JoinColumn(name = "destination_id")
    private TransitPoint destination;

    @OneToMany()
    @JoinTable(name = "route_transit_points",
            joinColumns = {@JoinColumn(name = "route_id")},
            inverseJoinColumns = {@JoinColumn(name = "transit_point_id")})
    private List<TransitPoint> transitPoints;

    @Column(name = "route_status")
    @Enumerated(EnumType.STRING)
    private RouteStatus routeStatus;

    @Column(name = "source_time")
    private int sourceTime;

    @Column(name = "destination_time")
    private int destinationTime;

    @Column(name = "route_type")
    @Enumerated(EnumType.STRING)
    private RouteType routeType;

    public Long getId() {
        return id;
    }

    public void setId(Long id) {
        this.id = id;
    }

    public User getUser() {
        return user;
    }

    public void setUser(User user) {
        this.user = user;
    }

    public TransitPoint getSource() {
        return source;
    }

    public void setSource(TransitPoint source) {
        this.source = source;
    }

    public TransitPoint getDestination() {
        return destination;
    }

    public void setDestination(TransitPoint destination) {
        this.destination = destination;
    }

    public RouteStatus getRouteStatus() {
        return routeStatus;
    }

    public void setRouteStatus(RouteStatus routeStatus) {
        this.routeStatus = routeStatus;
    }

    public int getSourceTime() {
        return sourceTime;
    }

    public void setSourceTime(int sourceTime) {
        this.sourceTime = sourceTime;
    }

    public int getDestinationTime() {
        return destinationTime;
    }

    public void setDestinationTime(int destinationTime) {
        this.destinationTime = destinationTime;
    }

    public RouteType getRouteType() {
        return routeType;
    }

    public void setRouteType(RouteType routeType) {
        this.routeType = routeType;
    }

    public List<TransitPoint> getTransitPoints() {
        return transitPoints;
    }

    public void setTransitPoints(List<TransitPoint> transitPoints) {
        this.transitPoints = transitPoints;
    }
}
