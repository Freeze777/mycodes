package com.ctl.cpms.domain;

import com.ctl.cpms.model.UserVO;

import javax.persistence.*;

@Entity
@Table(name = "cpm_users",uniqueConstraints = @UniqueConstraint(columnNames = "cuid"))
public class User {

    @Id
    @GeneratedValue(strategy = GenerationType.SEQUENCE, generator = "cpmUsersSeq")
    @SequenceGenerator(name = "cpmUsersSeq", sequenceName = "CPM_USERS_SEQ", allocationSize = 1)
    private Long userId;

    @Column(name = "name")
    private String name;

    @Column(name = "email")
    private String email;

    @Column(name = "cuid", unique = true)
    private String cuid;

    @Column(name = "password")
    private String password;

    @Column(name = "contact")
    private String contact;


    public User(UserVO userVO) {
        this.name = userVO.getName().trim();
        this.email = userVO.getEmail().trim();
        this.cuid = userVO.getCuid().trim();
        this.password = userVO.getPassword().trim();
        this.contact = userVO.getContact().trim();
    }

    public User() {
    }

    public Long getUserId() {
        return userId;
    }

    public void setUserId(Long userId) {
        this.userId = userId;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public String getEmail() {
        return email;
    }

    public void setEmail(String email) {
        this.email = email;
    }

    public String getCuid() {
        return cuid;
    }

    public void setCuid(String cuid) {
        this.cuid = cuid;
    }

    public String getPassword() {
        return password;
    }

    public void setPassword(String password) {
        this.password = password;
    }

    public String getContact() {
        return contact;
    }

    public void setContact(String contact) {
        this.contact = contact;
    }
}
